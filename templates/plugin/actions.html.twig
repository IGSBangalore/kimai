{% macro plugins(view) %}
    {% import "macros/widgets.html.twig" as widgets %}
    {% set event = actions(app.user, 'plugins', view) %}
    {{ widgets.page_actions(event.actions) }}
{% endmacro %}

{% macro plugin(plugin, view) %}
    {% import "macros/widgets.html.twig" as widgets %}
    {% set event = actions(app.user, 'plugin', view, {'plugin': plugin}) %}
    {% if view == 'index' %}
        {{ widgets.table_actions(event.actions) }}
    {% else %}
        {{ widgets.entity_actions(event.actions) }}
    {% endif %}
{% endmacro %}
