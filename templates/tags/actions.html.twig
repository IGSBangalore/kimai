{% macro tags(view) %}
    {% import "macros/widgets.html.twig" as widgets %}
    {% set event = actions(app.user, 'tags', {'view': view}) %}
    {{ widgets.page_actions(event.actions) }}
{% endmacro %}

{% macro tag(tag, view) %}
    {% import "macros/widgets.html.twig" as widgets %}
    {% set event = actions(app.user, 'tag', {'view': view, 'tag': tag}) %}
    {% if view == 'index' or view == 'custom' %}
        {{ widgets.table_actions(event.actions) }}
    {% else %}
        {{ widgets.page_actions(event.actions) }}
    {% endif %}
{% endmacro %}
